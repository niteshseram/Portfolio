{
	"name": "niteshseram.in",
	"version": "0.1.0",
	"private": false,
	"description": "My personal website built using Next.js, ChakraUI and MDX",
	"license": "MIT",
	"author": "Nitesh Seram <niteshseram@gmail.com>",
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"postbuild": "node ./scripts/generate-sitemap.mjs",
		"start": "next start",
		"prettier": "prettier --check .",
		"lint": "next lint",
		"format": "prettier --write .",
		"prepare": "husky install",
		"precommit": "lint-staged",
		"analyze": "cross-env ANALYZE=true next build"
	},
	"lint-staged": {
		"*.js": [
			"eslint --fix"
		],
		"*.{html,js,md,mdx,yml}": [
			"prettier --write"
		]
	},
	"dependencies": {
		"@prisma/client": "^3.6.0",
		"@tailwindcss/typography": "^0.4.1",
		"date-fns": "^2.23.0",
		"mdx-bundler": "^6.0.1",
		"next": "^11.1",
		"next-themes": "^0.0.15",
		"nodemailer": "^6.6.3",
		"preact": "^10.5.14",
		"react": "17.x",
		"react-dom": "17.x",
		"react-icons": "^4.2.0",
		"swr": "^1.1.2-beta.0"
	},
	"devDependencies": {
		"@babel/core": "^7.14.6",
		"@next/bundle-analyzer": "^11.1.2",
		"autoprefixer": "^10.3.4",
		"cross-env": "^7.0.3",
		"esbuild": "^0.12.20",
		"eslint": "7.2.0",
		"eslint-config-next": "^11.1.0",
		"eslint-config-prettier": "^8.3.0",
		"globby": "^12.0.2",
		"gray-matter": "^4.0.3",
		"husky": "^7.0.0",
		"lint-staged": "^11.1.2",
		"postcss": "^8.3.6",
		"prettier": "^2.2.1",
		"prisma": "^3.6.0",
		"reading-time": "^1.4.0",
		"rehype": "^12.0.0",
		"rehype-autolink-headings": "6.0.0",
		"rehype-code-titles": "1.0.3",
		"rehype-prism-plus": "^0.0.5",
		"rehype-slug": "5.0.0",
		"remark-gfm": "^2.0.0",
		"tailwindcss": "^2.2.15"
	},
	"keywords": [
		"next.js",
		"react.js",
		"mdx",
		"portfolio",
		"personal website",
		"chakra"
